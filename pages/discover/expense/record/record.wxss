/* pages/discover/expense/record/record.wxss */

.record {
  width: 690rpx;
  margin-left: 30rpx;
}

.line {
  width: 690rpx;
  height: 180rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0rpx 2rpx 15rpx 0rpx rgba(51, 51, 51, 0.15);
  border-radius: 10rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 40rpx;
}

.money {
  width: 220rpx;
  height: 180rpx;
  border-right: 1rpx dashed #E5E5E5;
  color: #FF5426;
  font-size: 60rpx;
  font-weight: bold;
  display: flex;
  justify-content: center;
  align-items: center;

}

.content {
  display: flex;
  flex-direction: column;
  width: 300rpx;
  margin-left: 27rpx;
}

.content .name {
  color: #333333;
  font-size: 36rpx;
  font-weight: bold;
}

.content .time {
  color: #808080;
  font-size: 24rpx;
  margin-top: 20rpx;
}

.status {
  width: 113rpx;
  height: 113rpx;
}

.status image {
  width: 113rpx;
  height: 113rpx;
}

.no-record {
  width: 750rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.no-record-image {
  width: 246rpx;
  height: 344rpx;
  margin-top: 330rpx;
}

.no-record-image image{
  width: 246rpx;
  height: 344rpx;
}

.no-record-text {
  color: #666666;
  font-size: 35rpx;
}