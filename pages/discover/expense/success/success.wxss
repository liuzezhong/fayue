/* pages/discover/expense/success/success.wxss */

.main {
  width: 690rpx;
  display: flex;
  align-items: center;
  flex-direction: column;
  margin-left: 30rpx;
}

.state-icon {
  width: 180rpx;
  height: 180rpx;
  margin-top: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.state-icon image {
  width: 180rpx;
  height: 180rpx;
}

.result-content {
  margin-top: 30rpx;
  display: flex;
  flex-direction: column;
  text-align: center;
}

.result-content .main-title {
  color: #333;
  font-size: 46rpx;
  font-weight: bold;
}

.result-content .sub-content {
  color: #333;
  font-size: 36rpx;
  margin-top: 15rpx;
}

.result-content .special-sub-content {
  color: #ff5426;
  font-size: 36rpx;
  font-weight: bold;
}

.index-button {
  width: 500rpx;
  height: 100rpx;
  background: linear-gradient(0deg, rgba(255, 164, 0, 1), rgba(255, 215, 0, 1));
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 38rpx;
  font-weight: bold;
  margin-top: 57rpx;
}

.ad-area {
  margin-top: 68rpx;
  display: flex;
  flex-direction: column;
}

.ad-info {
  width: 690rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  background: #000;
  border-radius: 10rpx;
}

.ad-info image {
  width: 690rpx;
  height: 200rpx;
  opacity: 0.4;
  filter: alpha(opacity=40);
  border-radius: 10rpx;
}

.ad-info-clone {
  position: relative;
  top: -211rpx;
  z-index: 10;
  color: white;
  width: 690rpx;
  height: 200rpx;
  left: 0rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 10rpx;
  font-size: 38rpx;
  font-weight: bold;
}

.recommend-title {
  margin-top: 70rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.recommend-title-text {
  color: #999;
  font-size: 26rpx;
  margin-left: 15rpx;
  margin-right: 15rpx;
}

.recommend-title-line {
  width: 115rpx;
  height: 2rpx;
  background-color: #efefef;
}

.apply-submit {
  font-size: 30rpx;
  color: #0054ff;
}

.index-submit {
  font-size: 30rpx;
  color: #0054ff;
}

.quick-submit {
  margin-top: 80rpx;
  display: flex;
  align-items: center;
}

.quick-submit-line {
  width: 1rpx;
  height: 30rpx;
  background-color: #E6E6E6;
  margin-left: 40rpx;
  margin-right: 40rpx;
}