/* pages/search/index/index.wxss */
.search {
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  background-color: #FFFFFF;
  width: 750rpx;
  box-shadow:3rpx 0px 6rpx rgba(0,0,0,0.2);
  z-index: 999;
}


.search-line {
  width: 690rpx;
  margin-top: 10rpx;
  margin-left: 30rpx;
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  
}

.search-input {
  width: 600rpx;
  height: 70rpx;
  background-color: #F5F5F5;
  display: flex;
  align-items: center;
  border-radius: 30rpx;
  
}

.input-icon {
  width: 75rpx;
  height: 70rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.input-icon image{
  width: 30rpx;
  height: 30rpx;
}

.cancel-icon {
  width: 60rpx;
  height: 70rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.cancel-icon image{
  width: 29rpx;
  height: 29rpx;
}

.input-main {
  margin-left: 2rpx;
  width: 450rpx;
}
.input-main input {
  font-size: 28rpx;
  color: #333333;
  
  height: 70rpx;
}

.search-placeholder {
  font-size: 28rpx;
  color: #999999;
}

.search-cancel {
  margin-left: 30rpx;
  font-size: 28rpx;
  color: #0080FF;
}

.hot-search {
  width: 670rpx;
  margin-left: 40rpx;
  margin-top: 160rpx;
}

.hot-search-title {
  font-size: 32rpx;
  color: #000000;
  display: flex;
  align-items: center;
  
}

.hot-search-title image {
  width: 30rpx;
  height: 30rpx;
  margin-left: 480rpx;
}

.search-span-list {
  margin-top: 40rpx;
  display: flex;
  flex-wrap: wrap;
}

.search-span {
  height: 60rpx;
  min-width: 80rpx;
  border-radius: 25rpx;
  background-color: #F5F5F5;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 30rpx;
  margin-right: 24rpx;
}

.search-span-selected {
  background-color: #FFD900;
  font-size: 26rpx;
  color: #1A1A1A;
}

.search-span-left {
  width: 30rpx;
  height: 100%;
}

.search-span-right {
  width: 30rpx;
  height: 100%;
}

.search-span text {
  color: #666666;
  font-size: 26rpx;
}

.search-history {
  width: 670rpx;
  margin-left: 40rpx;
  margin-top: 50rpx;
}

.search-associated {
  margin-top: 130rpx;
  width: 690rpx;
  margin-left: 30rpx;
}

.asso-list {
  width: 620rpx;
  display: flex;
  justify-items: center;
  align-items: center;
  margin: 30rpx 0 30rpx 70rpx;
}

.asso-list-content {
  width: 588rpx;
  font-size: 28rpx;
  color: #666666;
}

.asso-list-icon {
  display: flex;
  justify-content: center;
  align-items: center;
}

.asso-list-icon image {
  width: 21rpx;
  height: 15rpx;
}

.search-results-header {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  display: flex;
}

.results-header {
  display: flex;
  flex-direction: column;
}

.results-header .title {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.results-header .title .content{
  color: #000000;
  font-size: 32rpx;
}

.results-header .title .icon{
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 5rpx;
}

.results-header .title .icon image{
  width:46rpx;
  height:14rpx;
}

.results-number {
  font-size: 24rpx;
  color: #808080;
  margin-left: 10rpx;
  height: 45rpx;
  display: flex;
  align-items: center;
  width: 140rpx;
  
}

.search-results-line {
  display: flex;
  margin-left: 100rpx;
}


.search-results-list {
  margin-top: 250rpx;
  width: 690rpx;
  margin-left: 30rpx;
}

.search-results-list-recommend {
  margin-top: 50rpx;
}

.results-list {
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}

.results-list-question {
  font-size: 32rpx;
  color: #010101;
}

.results-list-answer {
  font-size: 24rpx;
  color: #808080;
  margin-top: 30rpx;
}

.results-list-project {
  display: flex;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}

.results-list-project-main {
  width: 452rpx;
}

.results-list-project-image {
  margin-left: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.results-list-project-image image{
  width: 214rpx;
  height: 164rpx;
  border-radius: 5rpx;
}

.ask-line {
  margin-top: 50rpx;
  margin-left: 30rpx;
  font-size: 28rpx;
  color: #0066CC;
}

.ask-law {
  display: flex;
  align-items: center;
  margin-top: 50rpx;
  margin-bottom: 200rpx;
  margin-left: 450rpx;
}

.ask-law image {
  width: 53rpx;
  height: 54rpx;
}

.ask-law text {
  margin-left: 15rpx;
  color: #000000;
  font-size: 34rpx;
}

.bottom {
  width: 750rpx;
  height: 200rpx;
}

.nosearch {
  margin-top: 60rpx;
  margin-bottom: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  color: #999999;
  font-size: 28rpx;
}

.nosearch-a {
  margin-bottom: 30rpx;
}

.nosearch-ask {
  color: #0066CC;
}

.wiki-hot {
  display: flex;
  flex-direction: column;
  margin-top: 350rpx;
}

.wiki-hot-header {
  margin-top: 30rpx;
  margin-left: 30rpx;
  display: flex;
  align-items: center;
}

.wiki-hot-header image {
  width: 36rpx;
  height: 44rpx;
}

.wiki-hot-header text {
  font-size: 34rpx;
  color: #333333;
  margin-left: 25rpx;
}