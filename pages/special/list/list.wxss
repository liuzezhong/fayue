}

.header-image image {
	width: 750rpx;
	height: 350rpx;
}

.header-order {
	position: absolute;
	top: 272rpx;
	left: 282rpx;
}

.header-order image {
	width: 186rpx;
	height: 48rpx;
}

.header-title {
	display: flex;
	margin-top: 30rpx;
	width: 690rpx;
	margin-left: 30rpx;
}

.header-title-text {
	font-size: 36rpx;
	color: #000000;
	width: 600rpx;
}

.header-title-share {
	/* width: 40rpx;
	height: 40rpx; */
	margin-left: 90rpx;
}

.header-title-share image {
	width: 40rpx;
	height: 40rpx;
